<!-- plant_item.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E8F5E9">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/TXT_plant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plant neme"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/TXT_plant_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/IMG_plant_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/BTN_plant_now"
                android:layout_alignEnd="@+id/BTN_plant_now"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_logo" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BTN_plant_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/IMG_plant_img"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:text="Plant Now"
                android:textColor="#2196F3" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>